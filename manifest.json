{
    "manifest_version": 3,
    "name": "Save to immich",
    "version": "1.1.0",
  
    "description": "Save image to Immich server",
  
    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "webRequest",
        "storage",
        "scripting",
        "notifications",
        "sidePanel"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "options_ui": {
        "page": "options.html"
    },

    "side_panel": {
        "default_path": "select-images-and-save.html"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "scx110@gmail.com"
        }
    },

    "icons": {
        "16": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    },
    "action": {
        "default_title": "Batch save to immich"
    }
}
